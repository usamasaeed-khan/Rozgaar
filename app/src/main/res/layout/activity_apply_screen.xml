<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ApplyScreenActivity">

    <include
            layout="@layout/app_bar_layout"
            />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:id="@+id/company_image_apply_screen"
            android:layout_height="200dp"
            android:contentDescription="TODO" />

        <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:id="@+id/company_name_apply_screen"
                android:layout_below="@id/company_image_apply_screen"
                android:textStyle="bold"
                android:textColor="#000000"

                android:layout_height="wrap_content" />

        <TextView
             android:layout_width="match_parent"
             android:textSize="20dp"
                android:textColor="#000000"
             android:layout_marginTop="10dp"
             android:layout_marginStart="20dp"
             android:id="@+id/company_description_apply_screen"
             android:layout_below="@id/company_name_apply_screen"

             android:layout_height="200dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="DEADLINE: "
                android:layout_below="@id/company_description_apply_screen"
                android:textStyle="bold"
                android:id="@+id/company_deadline_apply_screen"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="POSITIONS: "
                android:layout_below="@id/company_deadline_apply_screen"
                android:textStyle="bold"
                android:id="@+id/company_noOfPositions_apply_screen"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="LOCATION: "
                android:layout_below="@id/company_noOfPositions_apply_screen"
                android:textStyle="bold"
                android:id="@+id/company_location"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finish_btn"
                android:background="@drawable/ic_round_button"
                android:layout_below="@id/company_deadline_apply_screen"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:textColor="#FFF"
                android:text="FINISH APPLICATION"/>








    </RelativeLayout>

</LinearLayout>